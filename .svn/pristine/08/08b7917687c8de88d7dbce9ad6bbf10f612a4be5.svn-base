apply plugin: 'java'
apply plugin: 'checkstyle'

repositories {
    jcenter()
}
configurations {
    shadow
}

buildscript {
    repositories {
        jcenter()
        maven { url 'https://jitpack.io' }
    }
    dependencies {
        classpath 'com.github.cs125-illinois:gradle:0.5'
    }
}

apply plugin: 'edu.illinois.cs.cs125.grade'

dependencies {
    compile 'io.vertx:vertx-web:3.4.2'
    shadow 'io.vertx:vertx-web:3.4.2'
    testCompile 'org.testng:testng:6.9.6'
    testCompile 'com.googlecode.json-simple:json-simple:1.1.1'
    testRuntime 'net.sourceforge.pro-grade:pro-grade:1.1.1'
}

checkstyle {
    toolVersion "8.0"
}

test {
    useTestNG()
}

processTestResources {
    exclude '**/*.js'
}

defaultTasks 'grade'

jar {
    from {
        configurations.shadow.collect {
            it.isDirectory() ? it : zipTree(it)
        }
    }
    manifest {
        attributes 'Main-Class': 'WebServer'
    }
}

